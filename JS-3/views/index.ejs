<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artifact Manager</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="app-container">
        <header>
            <h1>Artifact Manager</h1>
            <div class="header-actions">
                <button id="newCategoryBtn">New Category</button>
                <button id="newArtifactBtn">New Artifact</button>
            </div>
        </header>
        
        <div class="main-content">
            <div class="sidebar">
                <div class="categories-container">
                    <h2>Categories</h2>
                    <div id="categoriesTree" class="categories-tree">
                        <!-- Categories will be rendered here -->
                    </div>
                </div>
            </div>
            
            <div class="content-area">
                <div class="filter-bar">
                    <input type="text" id="searchInput" placeholder="Search artifacts...">
                    <div class="filter-dropdown">
                        <select id="languageFilter">
                            <option value="">All Languages</option>
                        </select>
                    </div>
                    <div class="filter-dropdown">
                        <select id="frameworkFilter">
                            <option value="">All Frameworks</option>
                        </select>
                    </div>
                    <div class="filter-dropdown">
                        <select id="licenseFilter">
                            <option value="">All Licenses</option>
                        </select>
                    </div>
                </div>
                
                <div id="artifactsList" class="artifacts-list">
                    <!-- Artifacts will be rendered here -->
                </div>
            </div>
        </div>
    </div>
    
    <!-- Modal templates -->
    <div id="artifactModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2 id="modalTitle">Add New Artifact</h2>
            <form id="artifactForm">
                <input type="hidden" id="artifactId">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" required>
                </div>
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="url">URL:</label>
                    <input type="text" id="url">
                </div>
                <div class="form-group">
                    <label for="docType">Documentation Type:</label>
                    <input type="text" id="docType">
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" id="author">
                </div>
                <div class="form-group">
                    <label for="version">Current Version:</label>
                    <input type="text" id="version">
                </div>
                <div class="form-group">
                    <label for="language">Programming Language:</label>
                    <input type="text" id="language">
                </div>
                <div class="form-group">
                    <label for="framework">Framework:</label>
                    <input type="text" id="framework">
                </div>
                <div class="form-group">
                    <label for="license">License Type:</label>
                    <input type="text" id="license">
                </div>
                <div class="form-group">
                    <label for="categorySelect">Category:</label>
                    <select id="categorySelect"></select>
                </div>
                <div class="form-actions">
                    <button type="submit" id="saveArtifactBtn">Save</button>
                    <button type="button" id="cancelArtifactBtn">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <div id="categoryModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2 id="categoryModalTitle">Add New Category</h2>
            <form id="categoryForm">
                <input type="hidden" id="categoryId">
                <div class="form-group">
                    <label for="categoryName">Name:</label>
                    <input type="text" id="categoryName" required>
                </div>
                <div class="form-group">
                    <label for="parentCategorySelect">Parent Category:</label>
                    <select id="parentCategorySelect">
                        <option value="">None (Root Category)</option>
                    </select>
                </div>
                <div class="form-actions">
                    <button type="submit" id="saveCategoryBtn">Save</button>
                    <button type="button" id="cancelCategoryBtn">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <div id="artifactDetailsModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <div id="artifactDetails">
                <!-- Artifact details will be rendered here -->
            </div>
            <div class="version-history">
                <h3>Version History</h3>
                <div id="versionsList">
                    <!-- Version history will be rendered here -->
                </div>
            </div>
            <div class="artifact-actions">
                <button id="editArtifactBtn">Edit</button>
                <button id="deleteArtifactBtn">Delete</button>
                <button id="addVersionBtn">Add Version</button>
            </div>
        </div>
    </div>
    
    <div id="versionModal" class="modal">
        <div class="modal-content">
            <span class="close-modal">&times;</span>
            <h2>Add New Version</h2>
            <form id="versionForm">
                <input type="hidden" id="versionArtifactId">
                <div class="form-group">
                    <label for="versionNumber">Version Number:</label>
                    <input type="text" id="versionNumber" required>
                </div>
                <div class="form-group">
                    <label for="versionChanges">Changes:</label>
                    <textarea id="versionChanges"></textarea>
                </div>
                <div class="form-group">
                    <label for="downloadUrl">Download URL:</label>
                    <input type="text" id="downloadUrl">
                </div>
                <div class="form-actions">
                    <button type="submit" id="saveVersionBtn">Save</button>
                    <button type="button" id="cancelVersionBtn">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script type="module" src="/js/main.js"></script>
</body>
</html>
